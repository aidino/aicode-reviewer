# AI Code Reviewer - Example .env file
# Copy this file to .env và điền giá trị phù hợp

# Application settings
APP_NAME="AI Code Reviewer"
DEBUG=false

# API settings
API_HOST=localhost
API_PORT=8000

# LLM settings (chọn 1 provider và điền API key nếu cần)
LLM_PROVIDER=local           # local, openai, gemini, anthropic
OPENAI_API_KEY=              # Nếu dùng OpenAI
GEMINI_API_KEY=              # Nếu dùng Gemini
ANTHROPIC_API_KEY=           # Nếu dùng Anthropic

# Local LLM settings (nếu dùng local model)
LOCAL_LLM_MODEL_PATH=
LOCAL_LLM_DEVICE=auto        # auto, cpu, cuda

# Database settings
VECTOR_DB_URL=sqlite:///./vector_db.sqlite
POSTGRES_URL=                # Tùy chọn, nếu dùng PostgreSQL

# Analysis settings
MAX_FILE_SIZE_MB=10
SUPPORTED_LANGUAGES=["python", "java", "kotlin"]